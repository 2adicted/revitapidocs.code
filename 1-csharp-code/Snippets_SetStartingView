/// <summary>
		/// Sets the starting view
		/// </summary>
		public void SetStartingView()
		{
			UIDocument uidoc = this.ActiveUIDocument;
			Document doc = this.ActiveUIDocument.Document;
			
			var startView = new FilteredElementCollector(doc)
				.OfClass(typeof(StartingViewSettings));
			
			var legend = new FilteredElementCollector(doc)
				.OfCategory(BuiltInCategory.OST_Views)
				.Cast<View>()
				.FirstOrDefault(v => v.Name.Equals("_ISSUE SHEET"));
			
			StartingViewSettings startViewSettings = startView.First() as StartingViewSettings;
			
			using(Transaction t = new Transaction(doc, "Set Starting View"))
			{
				t.Start();
				startViewSettings.ViewId = legend.Id;					
				t.Commit();
			}		
		}
